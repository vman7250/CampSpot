<% layout('layouts/boilerplate')%>




    <h1>All Campgrounds</h1>

    <div> 
        <br>
        <br>
        <a href="/campgrounds/new"><button>Add Campgrounds</button></a>
    </div>
    <br>
    <br>
    <% for( let c of camp) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= c.image %>" alt="" srcset="">
                </div>
                <div class="col-md-8">
                    <div class = "card-body">
                        <a href="/campgrounds/<%=c.id%> "><h5 class="card-title"><%= c.title %> </h5></a>
                        <p class="card-title"><%= c.description %> <br>
                            <small class="text-muted"><%= c.location  %></small>
                        </p>
                        <a href="/campgrounds/<%=c.id%>" class="btn btn-primary">View <%= c.title %> </a>
                        

                    </div>    
                </div>
            </div>
        </div>    
                
            
    <% } %>
</div>
    

